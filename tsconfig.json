{
  "compilerOptions": {
    "baseUrl": "src", // Set the base URL to the src directory
    "paths": {
      "@/*": ["*"] // Optional: Map '@/' to the src directory
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest"]
  }
}